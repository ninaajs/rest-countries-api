{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "linebreak-style": ["error","windows"],
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "max-len": ["error", {"code" : 120}],
        "import/extensions": [ "error", { "js": "always" }]
    }
}
